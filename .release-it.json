{
    "$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
    "git": {
        "tagName": "v${version}",
        "commitMessage": "chore: release v${version}",
        "requireCleanWorkingDir": true
    },
    "hooks": {
        "after:bump": "echo Version bumped!",
        "after:release": "echo Successfully released!"
    },
    "github": {
        "release": true
    }
}